{
  "compilerOptions": {
    // Emit modern JavaScript features
    "target": "ES2020",

    // CommonJS is typical for Node.js libraries
    "module": "CommonJS",

    // Where compiled files and .d.ts go
    "outDir": "dist",

    // Your source files directory
    "rootDir": "src",

    // Emit .d.ts declaration files
    "declaration": true,

    // Strict checks for better type safety
    "strict": true,

    // Helps import default exports from CommonJS modules
    "esModuleInterop": true,

    // Ensures consistent import casing
    "forceConsistentCasingInFileNames": true,

    // Skip .d.ts checks to speed up compilation
    "skipLibCheck": true
  },
  "include": ["src"],     // Which folders/files to include
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"        // Exclude test files if you don't want them compiled
  ]
}
